BUILDCHECK_ENV=production

API_PORT=8080
ENGINE_PORT=9090
CLIENT_PORT=80

API_HOST=api
ENGINE_HOST=engine
BUILDCHECK_TRUST_PROXY_HEADERS=1

# Required: use a long random secret (recommended 32+ chars)
ENGINE_API_KEY=REPLACE_WITH_LONG_RANDOM_ENGINE_API_KEY
ENGINE_MIN_KEY_LEN=24
BUILDCHECK_PAYLOAD_MAX_BYTES=268435456

# Required admin credentials
BUILDCHECK_ADMIN_USERNAME=REPLACE_WITH_ADMIN_USERNAME
BUILDCHECK_ADMIN_PASSWORD=REPLACE_WITH_LONG_RANDOM_ADMIN_PASSWORD

# Optional legacy token auth (leave empty unless needed)
BUILDCHECK_CONTACT_ADMIN_TOKEN=

# Required: exact origins allowed to send admin credentialed requests
# Example: https://app.example.com,https://admin.example.com
BUILDCHECK_ADMIN_ALLOWED_ORIGINS=https://app.example.com

# Required persistent storage paths
BUILDCHECK_CONTACT_DB_PATH=/shared-tmp/contact_submissions.json
BUILDCHECK_ADMIN_SESSION_DB_PATH=/shared-tmp/contact_submissions.sessions.json

ENGINE_RATE_LIMIT_RPM=60
ENGINE_RATE_LIMIT_BACKEND=redis
ENGINE_RATE_LIMIT_REDIS_URL=redis://redis:6379/0
